<Window x:Class="Fractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractal"
        mc:Ignorable="d"
        Title="Fractal" Height="648.552" Width="831.138">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Image x:Name="imageMainView" Grid.Column="0" Grid.Row="0" />
        <GridSplitter ResizeDirection="Rows"  Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Content="Deviation:" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" FontWeight="Bold"  />
            <Label Content="Generations:" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Right" />
            <Label Content="Branches:" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Right"    />
            <Label Content="Zoom:" Grid.Row="0" Grid.Column="6" HorizontalAlignment="Right"    />
            <Label Content="Pi offset:" Grid.Row="2" Grid.Column="6" HorizontalAlignment="Right"   />
            <Label Content="Child length:" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right"   />
            <Label Content="Roots:" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Right"  />
            <Slider x:Name="sliderDeviation" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Minimum="0" Maximum="360" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderDeviation_ValueChanged"  />
            <Slider x:Name="sliderDetail" Grid.Row="1" Grid.Column="5" Minimum="1" Maximum="10" Value="3"  TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderDetail_ValueChanged" />
            <Slider x:Name="sliderChildCount" Grid.Row="2" Grid.Column="5" Minimum="1" Maximum="15" Value="5"  TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderChildCount_ValueChanged"  />
            <Slider x:Name="sliderSize" Grid.Row="0" Grid.Column="7" Minimum="1" Maximum="3000" Value="100"  TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderSize_ValueChanged"  />
            <Slider x:Name="sliderPiOffset" Grid.Row="2" Grid.Column="7" Minimum="-10" Maximum="10" Value="0" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderPiOffset_ValueChanged"/>
            <Slider x:Name="sliderRootCount" Grid.Row="1" Grid.Column="7" Minimum="1" Maximum="10" Value="4" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderRootCount_ValueChanged"/>
            <Slider x:Name="sliderPenWidth" Grid.Row="1" Grid.Column="3" Minimum="1" Maximum="10" Value="2" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderPenWidth_ValueChanged"/>
            <Slider x:Name="sliderPenOpacity" Grid.Row="3" Grid.Column="3" Minimum="1" Maximum="255" Value="80" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderPenOpacity_ValueChanged"/>
            <Slider x:Name="sliderRelativeChildLength" Grid.Row="0" Grid.Column="5" Minimum="0.01" Maximum="2" Value="1" AutoToolTipPrecision="4" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft" ValueChanged="sliderRelativeChildLength_ValueChanged" LargeChange="0.3" />
            <Label Content="Pen width:" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" />
            <Label Content="Pen opacity:" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" />

            <Grid x:Name="gridAuxiliarySettings" Grid.RowSpan="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ComboBox x:Name="comboLineStyle" Grid.Row="0" Grid.Column="2"  SelectedIndex="0" Margin="3" SelectionChanged="comboLineStyle_SelectionChanged">
                    <ComboBoxItem Content="Draw lines"/>
                    <ComboBoxItem Content="Draw polygons"/>
                    <ComboBoxItem Content="Draw bezier curves"/>
                    <ComboBoxItem Content="Draw leaf curves"/>
                    <ComboBoxItem Content="Draw closed curves"/>
                    <ComboBoxItem Content="Fill polygons"/>
                    <ComboBoxItem Content="Fill closed curves"/>
                </ComboBox>

                <TextBox x:Name="tbResolutionX" Grid.Row="0" Grid.Column="0" Text="1920" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center" TextChanged="tbResolutionX_TextChanged"  />
                <TextBox x:Name="tbResolutionY" Grid.Row="0" Grid.Column="1" Text="1080" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center" TextChanged="tbResolutionY_TextChanged"  />
                <TextBlock Text="x" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" />

                <Button x:Name="btBackground" Content="Background" Grid.Row="1" Grid.ColumnSpan="2" Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="btBackground_Click" Background="White" Foreground="Black"   />
                <Button x:Name="btForeground" Content="Foreground" Grid.Row="2" Grid.ColumnSpan="2" Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="btForeground_Click" Background="Black" Foreground="White" />

                <CheckBox x:Name="checkboxAnimate" Content="Animate" Margin="3" VerticalAlignment="Center" Click="checkboxAnimate_Click"  Grid.Row="1" Grid.Column="2"/>
                <CheckBox x:Name="checkboxAutosave" Content="Save all frames.." Margin="3" VerticalAlignment="Center" Click="checkboxAutosave_Click" Grid.Row="2" Grid.Column="2"/>

            </Grid>

        </Grid>
        <Button x:Name="btSave" Content="Save.." Click="btSave_Click_1" OpacityMask="#89000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="20" Width="36" />

    </Grid>
</Window>
